        <link rel="stylesheet" href="{{ asset('lightbox2-2.11.3/dist/images')}}">
        {% endblock %}


{% block body %}
<style>

@media screen and (max-width: 100000px) {
  .logoaja {
    position: absolute;
    left: -999em;
  }
}
</style>
<div class="container-fluid">

   <h2 style="font-size: 2.5rem; font-weight: 800; color: #0E4194;" class=" text-uppercase p-1 fw-light text-center text-lg-center mt-3 mb-0">Photos du Club</h1>

  <hr class="mt-2 mb-5">
<div class="container" style="padding-left: 20%; padding-right: 20%;">
  <div class="row text-center text-lg-start d-flex ">
 	{% for media in media %}


    <div class="col-md-4 d-flex justify-content-center align-items-center text-center p-0 m-0 flex-column pb-5" style="widht:200px; height:auto;">
      <div>
  <h2 class="text-center" style="color: #3576b7; font-weight: 800;">{{ media.titre }}</h2>
  </div>
    <div class="d-flex justif-content-center">
 <a  class="shadow-3-strong rounded mb-4" href="{{ asset('/uploads/'~media.images[0].name) }}" data-lightbox="roadtrip" ><img src="{{ asset('/uploads/'~media.images[0].name) }}" class="example-image img-thumbnail" style="max-width:200px; height:auto;">
 </a>
    </div>
    <div>
    <a href="{{ path("details", {id: media.id}) }}" class="btn text-white" style="background-color: #3576b7;font-weight: 800;">Tout voir</a>
    </div>
</div>
            {% endfor %}
</div>
  </div>

</div>



