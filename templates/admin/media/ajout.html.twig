  </div>
</div>
</div>
</div>

<div class="container">
    {# Si la route est "annonces_edit on affiche les images #}
	{% if app.request.attributes.get('_route') == 'admin_media_modifier' %}
      <div class="row d-flex">
        <div class="text-start p-5">
          <a href="{{ path("admin_media_modifier", {id: media.id}) }}" class="btn btn-success ">Actualiser</a>
        </div>
        {% for image in media.images %}
            <div class="col-2 d-flex flex-column ">
              <div class="card justify-content-between p-2" style="max-width: 300px; height:auto;">
                <img class="" src="{{ asset('/uploads/'~image.name) }}" alt="" width="auto">

                {# On ajoute un lien permettant de supprimer une image (sera géré en Ajax) #}
                <a class="text-center" href="{{ path('admin_media_supprimer_images', {id: image.id})}}" data-delete="" data-token="{{ csrf_token('delete' ~ image.id )}}"><h2 class="btn btn-danger m-2 d-flex align-items-end">
								Supprimer
								</h2></a>
              </div>
            </div>
        {% endfor %}
      </div>
    {% endif %}

</div>

